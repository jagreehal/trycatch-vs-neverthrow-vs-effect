{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022", 
    "moduleResolution": "bundler",
    "lib": ["ES2020", "ES2018", "ES2015", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["vitest/globals"]
  },
  "include": ["src", "test"]
}
